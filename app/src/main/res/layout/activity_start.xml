<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ez.dotarate.view.activities.StartActivity">

        <!--Системная кнопка Back тоже работает и выполняет шаг назад. Это происходит благодаря атрибуту app:defaultNavHost="true"-->
        <fragment
            android:id="@+id/start_nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/start_graph" />

    </FrameLayout>
</layout>
