<resources>

    <!-- Base applicationBind theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

    <style name="CategorySide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingBottom">2.5dp</item>
    </style>

    <style name="Side">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/gameScreenSideTextSize</item>
        <item name="android:paddingStart">2dp</item>
    </style>

    <style name="Score">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Score.CategoryKDA">
        <item name="android:layout_width">60dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="CategoryKDA">
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="Score.CategoryKDALand">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="ScoreValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Winner">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/winner_figure</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="PlayerHeroImage">
        <item name="android:layout_width">@dimen/gameScreenHeroImageWidth</item>
        <item name="android:layout_height">@dimen/gameScreenHeroImageHeight</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="PlayerCDA">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="PlayerHeroDamage">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="SupportItem">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:background">@drawable/item_rectangle</item>
    </style>

    <style name="Buff">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="BuffCount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PlayerCDA.PlayerValues">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlayerHeroesKilledCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/hero_kills_rectangle</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerSupportItemsRelativeLayout">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@color/whiteLight</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
